<div style="margin-top:20px;" class="row">
  <div class="small-12 medium-10 large-8 columns small-centered">
    <div class="searchbox">
        <div id="searcharea">
            <h3>Search/Add Person</h3>
            <div class="row">
              <div class="large-8 columns">
                <input id="search" onkeyup="updatePersonSearch(this);" type="text" size="30" name="search" placeholder="Firstname Lastname" value="" />
              </div>
              <div class="large-2 columns"><button type="button" class="tiny radius" name="action" value="search">Search</button></div>
              <div class="large-2 columns"><button type="button" class="tiny">Advanced</button></div>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <div><button onclick="showNewPersonDiv(this);" class="hide" id="newperson"></button></div>
                <div class="hide" id="newperson_div">
                   <%= render "form" %>
                </div>
            </div>
            <div class="large-12 columns">
                <%= render "search_results" %>
            </div>
        </div>
    </div>
  </div>
</div>

